    <title>Editar producto</title>
</head>
<body>
    <%- include("../partials/header") %>  
    
    <main>
        <section class="form-edition">
        <form action="/products/<%= product.id %>/update?_method=put" method="post" enctype="multipart/form-data">
            <h4>Editar Producto</h4>
           
                <input class="controls" type="text" name="name" value="<%=product.name%>" >
       
                <input class="controlsD" type="text" name="description" value="<%=product.description%>">
            
                <input class="controls"  type="text" name="price" value="<%=product.price%>">
           
                <input class="controls"   type="hidden"  name="oldImage"  value="<%=product.img%>">
           
                <input class="botonsE" type="submit" value="Guardar cambios"></input>
           
        </form>
        </section>
        
     </main>
      <%- include("../partials/footer")  %> 
    </body>
