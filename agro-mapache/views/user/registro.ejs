            <div class="container">
                <div class="title">Iniciar sesión</div>
                <form action="/user/list" method="post" enctype="multipart/form-data">
                    <div class="user-details">
                        <div class="input-box">
                            <span class="details"> Nombre completo</span>
                            <input name="firstName" type="text" placeholder="Enter your name" required>
                        </div>
                        <div class="input-box">
                            <span class="details">Apellido</span>
                            <input name="lastName" type="text" placeholder="Enter your surname" required>
                        </div>
                        <div class="input-box">
                            <span class="details">Correo electronico</span>
                            <input name="email" type="text" placeholder="Enter your email" required>
                        </div>
                        <div class="input-box">
                            <span class="details">Teléfono</label>
                            <input name="phone" type="tel" placeholder="Enter your phonenumber" >
                        </div>
                        <div class="input-box">
                            <span class="details">Contraseña</span>
                            <input name="password" type="text" placeholder="Enter your password" required>
                        </div>
                        <div class="input-box">
                            <span class="details">Conrfirmar Contraseña</span>
                            <input  type="text" placeholder="Confirm your password" required>
                        </div>
                        <div class="input-box">
                            <span class="details">Ingresa tu foto</span>
                            <input type="file" name="avatar">
                        </div>
                    </div>
                    <div class="condición-details">
                        <input name="type" type="radio" name="condicion" id="dot-1">
                        <input name="type" type="radio" name="condicion" id="dot-2">
                        <span class="condicón-title"> Condición</span>
                        <div class="category">
                            <label for="dot-1">
                                <span class="dot one"></span>
                                <span class="condición">Vendedor</span>
                            </label>
                            <label for="dot-2">
                                <span class="dot two"></span>
                                <span class="condición">Comprador</span>
                            </label>
                        </div>
                    </div>
                    <div class="button">
                        <input type="submit" value="Crear Usuario">
                    </div>
                </form>


